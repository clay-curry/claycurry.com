{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Jest: Run current file",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/apps/site",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--experimental-vm-modules",
        "${workspaceFolder}/apps/site/node_modules/jest/bin/jest.js",
        "--runInBand",
        "--verbose",
        "${file}"
      ],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Debug: validate-links.ts",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/apps/site",
      "runtimeArgs": [
        "--experimental-strip-types"
      ],
      "program": "${workspaceFolder}/apps/link-checker/src/validate-links.ts",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
