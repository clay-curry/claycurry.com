{
  "name": "next-tex",
  "version": "0.1.0",
  "description": "Math rendering for Next.js applications using KaTeX or MathJax",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./katex": {
      "types": "./dist/katex.d.ts",
      "import": "./dist/katex.js"
    },
    "./mathjax": {
      "types": "./dist/mathjax.d.ts",
      "import": "./dist/mathjax.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "check-types": "tsc --noEmit",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "dependencies": {
    "katex": "^0.16.11",
    "rehype-katex": "^7.0.1",
    "rehype-mathjax": "^6.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/katex": "^0.16.7",
    "@types/node": "^20",
    "@types/react": "^19"
  }
}
