{
  "$schema": "https://turborepo.dev/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "KV_REST_API_REDIS_URL",
        "RESEND_API_KEY",
        "ANTHROPIC_API_KEY",
        "AI_GATEWAY_API_KEY",
        "GITHUB_TOKEN",
        "XAI_API_KEY",
        "OPENAI_API_KEY",
        "PERPLEXITY_API_KEY"
      ]
    },
    "check": {},
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "check-links": {
      "dependsOn": ["build"]
    }
  }
}
